<div class="container">
    <div class="header text-center"> 
        <h1> Checkout </h1>
    </div>
    <div class="container"> 
        <div class="card-group">
            {{#if cart}}
                {{#each cart}}
                    {{>dishesCart item=dishName category=dishCategory price=dishPrice quantity=quantity}}
                {{/each}}
            {{else}}
                <div class="error text-center">
                    <h2 style="color: white"> Your Cart is Empty! </h2>
                </div>
            {{/if}}      
        </div>
    </div>
</div>
