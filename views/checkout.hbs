{{!-- checkout.hbs --}}

<script src="/js/checkout.js" defer></script>
{{>nav}}
<style>
    .container-crd {
        /* background-color: white; */
    }
</style>
<div class="container-crd">
    <div class="header text-center">
        <h1> Checkout </h1>
    </div>
    <div class="container">
        <div class="card-group flex-col">
            {{#if cart}}
            {{#each cart}}
            {{>dishesCart item=name category=category price=price quantity=quantity}}
            {{/each}}
            {{/if}}
        </div>
    </div>
    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr>
                <th>Order Summary</th>
            </tr>
        </thead>
        <tbody>
            {{#if discount}}
            <tr>
                <td>Combo Name: {{ comboName }}</td>
            </tr>
            <tr>
                <td>Discount: {{ discount }}</td>
            </tr>
            <tr>
                <td>Total Price After Discount: P{{ totalPriceAfterDiscount }}</td>
            </tr>
            {{else}}
            <tr>
                <td>Total Price: P{{ totalPrice }}</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
    <form class="form-checkout" action="/submitOrder" method="post">
        <div class="form-group">
            <label for="customerName">Customer Name:</label>
            <input type="text" id="customerName" name="customerName" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="payment">Payment:</label>
            <input type="text" id="payment" name="payment" class="form-control" required>
        </div>
        <button id="submitbtn" type="submit" class="btn btn-primary">Submit Order</button>
        <button id="cancel-btn" class="btn btn-secondary">Cancel Order</button>
    </form>

</div>

<style>
    .table {
        margin: 0 auto;
        width: 50%;
        margin-top: 1rem;
    }
</style>
